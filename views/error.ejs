<!DOCTYPE html>
<html lang="en">
<%- include('partials/header', { pageTitle: 'Error - Smart Library', isAuthenticated: isAuthenticated || false }) %>
<body>
  <main class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card text-center">
          <div class="card-body">
            <% if (statusCode === 403) { %>
              <i class="fas fa-lock fa-5x text-warning mb-4"></i>
              <h1 class="display-4">Access Denied</h1>
              <p class="lead">You don't have permission to access this resource.</p>
            <% } else if (statusCode === 404) { %>
              <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
              <h1 class="display-4">Page Not Found</h1>
              <p class="lead">The page you're looking for doesn't exist.</p>
            <% } else if (statusCode === 500) { %>
              <i class="fas fa-server fa-5x text-danger mb-4"></i>
              <h1 class="display-4">Server Error</h1>
              <p class="lead">Something went wrong on our end.</p>
            <% } else { %>
              <i class="fas fa-exclamation-circle fa-5x text-secondary mb-4"></i>
              <h1 class="display-4">Error <%= statusCode || 'Unknown' %></h1>
              <p class="lead">An unexpected error occurred.</p>
            <% } %>
            
            <% if (error) { %>
              <div class="alert alert-danger mt-3">
                <%= error %>
              </div>
            <% } %>
            
            <div class="mt-4">
              <% if (isAuthenticated) { %>
                <a href="/dashboard" class="btn btn-primary me-2">
                  <i class="fas fa-home"></i> Go to Dashboard
                </a>
              <% } else { %>
                <a href="/" class="btn btn-primary me-2">
                  <i class="fas fa-home"></i> Go Home
                </a>
              <% } %>
              <button onclick="history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Go Back
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <%- include('partials/footer') %>
</body>
</html>

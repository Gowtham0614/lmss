<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= pageTitle || "SMVEC Digital Library" %></title>
  
  <!-- Stylesheets -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css" />
  
  <!-- Meta tags -->
  <meta name="description" content="Sri Manakula Vinayagar Engineering College Digital Library Management System">
  <meta name="keywords" content="SMVEC, library, books, digital library, engineering college">
  <meta name="author" content="Sri Manakula Vinayagar Engineering College">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>

<!-- College Header -->
<div class="college-header">
  <div class="container">
    <div class="d-flex align-items-center justify-content-center">
      <div class="college-logo me-3">
        <i class="fas fa-graduation-cap" style="font-size: 2rem;"></i>
      </div>
      <div>
        <h1 class="college-name">Sri Manakula Vinayagar Engineering College</h1>
        <p class="college-subtitle">Digital Library Management System</p>
      </div>
    </div>
  </div>
</div>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="<%= isAuthenticated ? '/dashboard' : '/' %>">
      <i class="fas fa-book-open me-2"></i>
      SMVEC Library
    </a>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <% if (!isAuthenticated) { %>
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-home me-1"></i>Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">
              <i class="fas fa-sign-in-alt me-1"></i>Login
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">
              <i class="fas fa-user-plus me-1"></i>Register
            </a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link <%= (pageTitle && pageTitle.includes('Dashboard')) ? 'active' : '' %>" href="/dashboard">
              <i class="fas fa-tachometer-alt me-1"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= (pageTitle && pageTitle.includes('Explore')) ? 'active' : '' %>" href="/explore">
              <i class="fas fa-search me-1"></i>Explore Books
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= (pageTitle && pageTitle.includes('Activity')) ? 'active' : '' %>" href="/activity">
              <i class="fas fa-history me-1"></i>My Activity
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= (pageTitle && pageTitle.includes('Profile')) ? 'active' : '' %>" href="/profile">
              <i class="fas fa-user me-1"></i>Profile
            </a>
          </li>
          
          <% if (user && user.role === 'admin') { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-cog me-1"></i>Admin
              </a>
              <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                <li><a class="dropdown-item" href="/admin/dashboard">
                  <i class="fas fa-chart-bar me-2"></i>Admin Dashboard
                </a></li>
                <li><a class="dropdown-item" href="/admin/books">
                  <i class="fas fa-books me-2"></i>Manage Books
                </a></li>
                <li><a class="dropdown-item" href="/admin/users">
                  <i class="fas fa-users me-2"></i>Manage Users
                </a></li>
                <li><a class="dropdown-item" href="/admin/activities">
                  <i class="fas fa-list me-2"></i>All Activities
                </a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/admin/books/add">
                  <i class="fas fa-plus me-2"></i>Add New Book
                </a></li>
              </ul>
            </li>
          <% } %>
          
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="fas fa-sign-out-alt me-1"></i>Logout
            </a>
          </li>
          
          <li class="nav-item d-none d-lg-block">
            <span class="navbar-text ms-3">
              <i class="fas fa-user-circle me-1"></i>
              Welcome, <strong><%= user ? user.name : 'User' %></strong>
              <% if (user && user.role === 'admin') { %>
                <span class="badge bg-warning text-dark ms-1">Admin</span>
              <% } %>
            </span>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
